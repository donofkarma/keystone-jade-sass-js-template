{
    "restartable": "rs",
    "ignore": [
        ".git",
        "bower_components/**/*",
        "node_modules/**/*",
        "src/**/*",
        "public/**/*"
    ],
    "verbose": true,
    "execMap": {
        "js": "node --harmony"
    },
    // "events": {
    //     "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
    // },
    "env": {
        "NODE_ENV": "development"
    },
    "ext": "js json"
}